chdir # the default dir is home directory
startup_message off	# do not display the startup message
term screen-256color
altscreen on
vbell off # disable the bell
defscrollback 1000

# ways to get the bindkey code:
#	* cat > /dev/null
#	* read
#	* ctrl+v
# then press key and display code
bindkey "^[[D" prev
bindkey "^[[C" next 

# status line
hardstatus on
hardstatus firstline
hardstatus string "%{= br}%{g}[%l]%{w}%1`%{g}[%=%{=kw}%{w}%-w%{Y}[%{W}%n-%t%{Y}]%{w}%+w%=%{g}][%{w}%m-%d %{Y}%c%{g}]"

# screen windows
screen -t w   1
screen -t j   2
select        1
