conky.config = {

    -- 不输出到X
    out_to_x = false,
    out_to_console = true,
    background = false,
    double_buffer = false,
    -- 刷新时间
    update_interval = 1,
    -- 运行时间，0为一直运行
    total_run_times = 0,
    -- 强制uft8编码，需xft支持
    override_utf8_locale = false,
    -- 缩写字符单位
    short_units = true,
    -- 监视端口
    if_up_strictness = 'address',
    -- cpu数据监测模式，一般选2
    cpu_avg_samples = 2

}
--图标查询 http://fontawesome.io/cheatsheet/
-- / ${fs_free /}   \
-- ${battery_short}  ${uptime_short}   \

conky.text = [[

♫ ${exec mocp -Q %song} - ${exec mocp -Q %artist}   \
${if_up wlo1} ${downspeed wlo1} ${upspeed wlo1}   ${wireless_essid wlo1}$else No Wireless $endif   \
${if_up eno1} ${downspeed eno1} ${upspeed eno1}$endif   \
 ${cpu cpu0}% ${hwmon 0 temp 2}°C   \
 ${memperc}%   \
 ${color (#0A1B2C)}${exec printf %.0f $(light)}   \
${execi 1 amixer | grep -A10 'Master' | sed -rn 's/.*\[([0-9]+%)\].*\[(on|off)\]/\2 \1/p' | sed -n '1p' | sed 's/off.*/    /' | sed -r 's/on( [01234]?[0-9]%)/\1/' | sed -r 's/(on|) 0%/ 0%/' | sed -r 's/on//'}   \
 ${time %a %b_%d %T}
]]
