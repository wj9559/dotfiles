#!/usr/bin/env bash
# author: wujian(github.com/wj9559)

#mv file.bak file ${file%.*}

cpmv="cp -a"
_usage() {
echo "\
Usage: bak [OPTION] SOURCE...
create SOURCE.bak, default exec \"$cpmv SOURCE...\".
  -mv           mv SOURCE SOURCE.bak

  -P            bak the SOURCE on the physical directory
  -H            follow symbolic links in SOURCE
  -L            always follow symbolic links in SOURCE

  -h, --help    display this help and exit"
}
[[ $1 == "-h" || $1 == "--help" ]] && _usage && exit
[[ $# == 0 ]] && _usage && exit

_create() {
var=${1%/}
$cpmv "$var" "$var.bak" &> /dev/null

if [[ $? -eq 0 ]]; then
	echo create "'$var.bak'"
else
	echo "bak: cannot access '$1': No such file or directory" >&2
	return 2
fi
}

if [[ $1 == "-mv" ]]; then
    cpmv=mv
    shift
fi
if [[ $1 == "-H" ]]; then
    cpmv="$cpmv -Hr"
    shift
elif [[ $1 == "-L" ]]; then
    cpmv="$cpmv -Lr"
    shift
fi

exitcode=0

if [[ $1 == "-P" ]]; then
    shift
    for i in $(seq $#); do
        file=$(realpath "$1")
        shift
        _create "$file"
        [[ $? == 2 ]] && let exitcode++
    done
else
    for i in $(seq $#); do
        file=$1
        shift
        _create "$file"
        [[ $? == 2 ]] && let exitcode++
    done
fi

exit $exitcode
