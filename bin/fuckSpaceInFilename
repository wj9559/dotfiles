#!/usr/bin/env bash
# author: wujian(github.com/wj9559)

_usage() {
echo "\
Usage: fuckSpaceInFilename [replace char]
Fuck Space In Filename, default remove space.
  -h, --help        display this help and exit"
}
[[ $1 == "-h" || $1 == "--help" ]] && _usage && exit

find . -name \*\ \* -execdir rename " " "$1" {} \;

num=$(find . -name \*\ \* | wc -l)
if [[ $num -ne 0 ]];then
    $0 $1
fi
