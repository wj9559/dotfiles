#!/usr/bin/env bash
# author: wujian(github.com/wj9559)

_usage(){
echo "\
Usage: fuckSpaceInFilename [replace char]
Fuck Space In Filename, default remove space.
  -h, --help        display this help and exit"
}
[[ $1 == "-h" || $1 == "--help" ]] && _usage && exit

replace="$1"
#for i in $(seq 2); do
if [[ -n $1 ]]; then
    find . -iname \*\ \* -execdir rename " " "$replace" {} \;
else
    find . -iname \*\ \* -execdir rename " " "" {} \;
fi
#done

num=$(find . -iname \*\ \* | wc -l)
[[ $num -ne 0 ]] && echo 'Please once again.' || exit 0
