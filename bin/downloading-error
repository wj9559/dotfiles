#!/usr/bin/env bash

speed_less_then=${1:-30}
ERROR_count=${2:-10}
sleeptime=${3:-1}

while [[ $count -lt $ERROR_count ]]; do
    sleep $sleeptime
    if [[ $(netspeed) -lt $speed_less_then ]]; then
        count=$(expr $count + 1)
    fi
done

bell 2 80
notify-send --app-name=down --expire-time=0 "download is error"
exit 2
