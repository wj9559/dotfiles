#!/usr/bin/env bash
# author: wujian(github.com/wj9559)

usage(){
echo "Usage: loop [times] [command]
loop exec command
  time		执行次数(default 5)
  command	执行命令
  --help	display this help and exit"
exit 0
}

evalit(){
    if [ $cnt = 1 ];then
        eval $@
        return
    else
        let cnt="cnt-1"
        evalit $@
    fi
    eval $@
}

cnt=$1
[[ $1 = "--help" || -z $2 ]] && usage && exit
shift
evalit $@
