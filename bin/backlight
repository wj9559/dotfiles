#!/usr/bin/env bash
# author: wujian(github.com/wj9559)

_usage(){
echo "\
Usage: backlight [options] [value]
change backlight
  i             info
  +             add 10%
  ++            add  5%
  -             subtract 10%
  --            subtract  5%
  s             set [value]
  -h, --help    display this help and exit"
}
[[ $1 == "-h" || $1 == "--help" ]] && _usage && exit

type -a light &>/dev/null
if [[ $? != 0 ]];then
    echo "Please install \"aur/light\""
    exit 1
fi

info(){
light -G
}

add(){
light -A 10
info
}

add-l(){
light -A 5
info
}

subtract(){
light -U 10
info
}

subtract-l(){
light -U 5
info
}

set(){
light -S $1
info
}

case ${1:-i} in
i         ) info;;
+         ) add;;
++        ) add-l;;
-         ) subtract;;
--        ) subtract-l;;
s         ) set $2;;
esac
