#!/usr/bin/env bash

sleeptime="0.1"
iface=${1:-wlo1}
type=" "

_get_rx(){
cat /sys/class/net/"$iface"/statistics/rx_bytes
#ifstat -j $iface | grep -Po "rx_bytes\":\d+" | cut -d: -f2
}
_get_tx(){
cat /sys/class/net/"$iface"/statistics/tx_bytes
#ifstat -j $iface | grep -Po "tx_bytes\":\d+" | cut -d: -f2
}

RXB=$(_get_rx)
TXB=$(_get_tx)
sleep "$sleeptime"
RXBN=$(_get_rx)
TXBN=$(_get_tx)
RXDIF=$(echo "$((RXBN - RXB)) / 1024 / ${sleeptime}" | bc )
TXDIF=$(echo "$((TXBN - TXB)) / 1024 / ${sleeptime}" | bc )

if [[ $2 == '-h' ]]; then
if [ $RXDIF -gt 1024 ]; then
	RXDIF=$(echo "scale=1;${RXDIF} / 1024" | bc)
	RXDIF_UNIT="M/s"
else
	RXDIF_UNIT="K/s"
fi

if [ $TXDIF -gt 1024 ]; then
	TXDIF=$(echo "scale=1;${TXDIF} / 1024" | bc)
	TXDIF_UNIT="M/s"
else
	TXDIF_UNIT="K/s"
fi

# NOTE: '%5.01' for fixed length always
#printf " ${RXDIF}${RXDIF_UNIT}  ${TXDIF}${TXDIF_UNIT}"
echo " ${RXDIF}${RXDIF_UNIT}  ${TXDIF}${TXDIF_UNIT}"
else
    if [[ $2 == 't' ]]; then
        echo $TXDIF
    else
        echo $RXDIF
    fi
fi
