#!/usr/bin/env bash

l='ls -F --color=auto'
la='ls -AhF --color=auto'
ll='ls -AlhF --color=auto'
yis='yi -s -t zh'
vcat='vimcat'
pacs='pacman -Ss'
paci="pacman -Si"
paclf='pacman -Ql'
yaos='yaourt -Ss'
yaoi='yaourt -Si'
pkgfile='pkgfile -v'

CMD=$*
case $CMD in
l        ) CMD=$l;;
la       ) CMD=$la;;
ll       ) CMD=$ll;;
yis      ) CMD=$yis;;
vcat     ) CMD=$vcat;;
pacs     ) CMD=$pacs;;
paci     ) CMD=$paci;;
paclf    ) CMD=$paclf;;
yaos     ) CMD=$yaos;;
yaoi     ) CMD=$yaoi;;
pkgfile  ) CMD=$pkgfile;;
esac

while true; do
    echo -ne "\e[1;32m$CMD \e[0m"
    read KEY
    $CMD $KEY
done
