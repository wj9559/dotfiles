#!/usr/bin/env bash

_usage() {
echo "\
Usage: imgurl [-s] [FILE]
get url of img.
  -s, --screenshot    use ~/Pictures/Screenshots/latest.png
  -h, --help          display this help and exit"
}
[[ $1 == "-h" || $1 == "--help" ]] && _usage && exit
[[ $# == 0 ]] && _usage && exit

if [[ $1 == '-s' || $1 == '--screenshot' ]]; then
    img=~/Pictures/Screenshots/latest.png
else
    img=$(realpath $1 2>/dev/null)
    if [ $? -ne 0 ]; then
        _usage && exit 2
    fi
fi

curl -s -F "name=@$img" https://img.vim-cn.com | tee >(xclip &>/dev/null)
